{
  "$schema": "http://json-schema.org/draft-04/schema#",
 
  "type": "object",
  "properties": {
	"title": {
	  "type": "string"
	},
	"to": {
	  "type": "string"
	},
	"rule": {
	  "type": "string"
	},
	"tags": {
	  "type": "string"
	},
	"atts": {
	  "$ref": "#/definitions/atts"         
	}
  },
  "required": [
	"title",
	"to",
	"rule",
	"tags",
	"atts"
  ],
"definitions": {
        "atts": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "enum": [
                                "Text",
                                "Boolean",
                                "Numeric",
                                "DateTime"
                            ],
                            "readOnly": true
                        },
                        "isNullable": {
                            "type": [
                                "boolean",
                                "null"
                            ],
                            "readOnly": true
                        }
                    }
                }
            }
        }
    }
}